<div class="row">
    <h2 class="col s12 center">Courses</h2>
</div>

{{#if courses}}
{{#each courses}}
 <div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{image}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{name}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a href="/courses/{{id}}">Open course</a>
          <a href="/courses/{{id}}/edit">Edit course</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<p class="center">There is no courses here</p>
{{/if}}
