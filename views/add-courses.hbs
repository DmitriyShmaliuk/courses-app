<div class="row">
    <h2 class="col s12 center">Add new course</h2>
</div>

<div class="row">
    <form class="col s6 offset-s3" method="POST" action="/add">
        <div class="input-field">
            <input placeholder="Name" id="courseName" type="text" name="name" class="validate" required>
            <label for="courseName">Name</label>
        </div>

        <div class="input-field">
            <input placeholder="Price" id="price" name="price" type="number" class="validate" min="0">
            <label for="price">Price</label>
        </div>

        <div class="input-field">
            <input placeholder="Image URL" id="image" type="text" name="image" class="validate">
            <label for="image">Image URl</label>
        </div>

        <button class="btn">Submit</button>
    </form>
</div>