<div class="row auth">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s6"><a href="#login">Login</a></li>
      <li class="tab col s6"><a href="#register">Register</a></li>
    </ul>
  </div>

  <div id="login" class="col s12">
    <h2 class="center">Login</h2>

    {{#if loginError}}
    <p class="alert col s8 offset-s2">{{loginError}}</p>
    {{/if}}

    <form class="col s8 offset-s2" method="POST" action="/auth/login">
      <div class="input-field">
        <input class="validate" id="email" placeholder="User email" name="email" type="email" required>
        <label for="courseName">User email</label>
      </div>

      <div class="input-field">
        <input class="validate" id="password" placeholder="Password" name="password" type="password">
        <label for="price">Password</label>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button class="btn" type="submit">Login</button>
    </form>
  </div>

  <div id="register" class="col s12">
    <h2 class="center">Register</h2>

    {{#if registerError}}
    <p class="alert col s8 offset-s2">{{registerError}}</p>
    {{/if}}

    <form class="col s8 offset-s2" method="POST" action="/auth/register">
      <div class="input-field">
        <input class="validate" id="email" placeholder="User email" name="email" type="email" required>
        <label for="courseName">User email</label>
      </div>

      <div class="input-field">
        <input class="validate" id="name" placeholder="User name" name="name" type="text" required>
        <label for="courseName">User name</label>
      </div>

      <div class="input-field">
        <input class="validate" id="rPassword" placeholder="Password" name="password" type="password">
        <label for="price">Password</label>
      </div>

      <div class="input-field">
        <input class="validate" id="confirmPassword" placeholder="Confirm password" name="confirmPassword" type="password">
        <label for="price">Confirm password</label>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button class="btn" type="submit">Register</button>
    </form>
  </div>
</div>