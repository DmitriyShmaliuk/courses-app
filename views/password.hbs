<div class="row">
  <div class="col s12">
    <h2 class="center">New password</h2>

    {{#if error}}
    <p class="alert col s8 offset-s2">{{error}}</p>
    {{/if}}

    <form class="col s8 offset-s2" method="POST" action="/auth/password">
      <div class="input-field">
        <input class="validate" id="password" placeholder="New password" name="password" type="password" required>
        <label for="courseName">New password</label>
      </div>

      <div class="input-field">
        <input class="validate" id="confirmPassword" placeholder="Confirm password" name="confirmPassword" type="password" required>
        <label for="courseName">Confirm password</label>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">
      <input type="hidden" name="email" value="{{email}}">
      <input type="hidden" name="token" value="{{token}}">
      <input type="hidden" name="id" value="{{id}}">

      <button class="btn" type="submit">Reset</button>
    </form>
  </div>
</div>