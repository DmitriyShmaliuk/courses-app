<div class="row">
  <div class="col s12">
    <h2 class="center">Reset password</h2>

    {{#if error}}
    <p class="alert col s8 offset-s2">{{error}}</p>
    {{/if}}

    <form class="col s8 offset-s2" method="POST" action="/auth/reset">
      <div class="input-field">
        <input class="validate" id="email" placeholder="User email" name="email" type="email" required>
        <label for="courseName">User email</label>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button class="btn" type="submit">Reset</button>
    </form>
  </div>
</div>